pipeline{

    agent any

    stages {
        stage('Compile') {
            steps {
                echo 'Compiling..'
                sh './gradlew clean compileJava'
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Testing..'
                    sh './gradlew test'
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh './gradlew build'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}