pipeline{

    agent any

    stages {
        stage('Compile') {
            steps {
                echo 'Compiling..'
                bat './gradlew clean compileJava'
            }
        }
        stage('Test') {
            steps {
                script {
                    try {
                        echo 'Testing..'
                        bat './gradlew test --no-daemon' //run a gradle task
                    } finally {
                        junit '**/build/test-results/test/*.xml' //make the junit test results available in any case (success & failure)
                    }
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                bat './gradlew build'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}