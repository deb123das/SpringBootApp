pipeline{

    agent any

    stages {
        stage('Compile') {
            steps {
                sh 'sudo chmod +x ./gradlew'
                echo 'Compiling..'
                sh './gradlew clean compileJava'
            }
        }
        stage('Test') {
            steps {
                script {
                    try {
                        sh 'sudo chmod +x ./gradlew'
                        echo 'Testing..'
                        sh './gradlew test --no-daemon' //run a gradle task
                    } finally {
                        junit '**/build/test-results/test/*.xml' //make the junit test results available in any case (success & failure)
                    }
                }
            }
        }
        stage('Build') {
            steps {
                sh 'sudo chmod +x ./gradlew'
                echo 'Building..'
                sh './gradlew build'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}